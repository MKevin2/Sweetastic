<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telaNome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".NomeActivity">

    <View
        android:id="@+id/corDeFundo6"
        android:layout_width="369dp"
        android:layout_height="769dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="83dp"
        android:background="#FFF8A4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/titulo6"
        android:layout_width="342dp"
        android:layout_height="89dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="626dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="@string/titulo_nome"
        android:textColor="#43A047"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/folha"
        android:layout_width="65dp"
        android:layout_height="112dp"
        android:layout_marginTop="643dp"
        android:layout_marginEnd="340dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/imagem_desc"
        android:rotation="-41"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foia"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/folha7"
        android:layout_width="45dp"
        android:layout_height="117dp"
        android:layout_marginStart="380dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="623dp"
        android:contentDescription="@string/imagem_desc"
        android:rotation="-236"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foia"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/folha8"
        android:layout_width="81dp"
        android:layout_height="118dp"
        android:layout_marginStart="339dp"
        android:layout_marginBottom="700dp"
        android:contentDescription="@string/imagem_desc"
        android:rotation="-58"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foia"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/folha9"
        android:layout_width="76dp"
        android:layout_height="110dp"
        android:layout_marginTop="546dp"
        android:layout_marginEnd="360dp"
        android:layout_marginBottom="129dp"
        android:contentDescription="@string/imagem_desc"
        android:rotation="-54"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foia"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/folha10"
        android:layout_width="129dp"
        android:layout_height="139dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="716dp"
        android:layout_marginEnd="223dp"
        android:contentDescription="@string/imagem_desc"
        android:rotation="-83"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foia"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/folha11"
        android:layout_width="85dp"
        android:layout_height="62dp"
        android:layout_marginStart="259dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="756dp"
        android:contentDescription="@string/imagem_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foia2"
        tools:ignore="ImageContrastCheck" />

    <EditText
        android:id="@+id/txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="341dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="391dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/nome_hint"
        android:inputType="text"
        android:textColor="#003C25"
        android:textColorHint="#003C25"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnProsseguir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="409dp"
        android:layout_marginBottom="324dp"
        android:backgroundTint="#003C35"
        android:onClick="enviarNome"
        android:text="@string/button_text"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>